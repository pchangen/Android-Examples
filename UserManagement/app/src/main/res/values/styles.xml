<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="mButtonStyle">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="mCardViewStyle">
        <item name="android:layout_marginLeft">@dimen/mCardElevation</item>
        <item name="android:layout_marginRight">@dimen/mCardElevation</item>
        <item name="android:padding">5dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
